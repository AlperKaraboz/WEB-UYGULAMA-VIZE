@model IEnumerable<Zuperdukkan.Models.anakart>

@{
    ViewBag.Title = "Listele3";
}

<h2>STOK BİLGİ</h2>

<p>
    @Html.ActionLink("Kayıt Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Marka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stok)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stok)

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>

            <td>
                @Html.ActionLink("Düzenle", "Edit", new { Id = item.Id }) |
                
                @Html.ActionLink("Sil", "Delete", new { Id = item.Id })
            </td>
        </tr>
    }

</table>
